<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/package_cardview"
    android:layout_width="240dp"
    android:layout_height="400dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="12dp"
    android:layout_margin="10dp"
    app:cardBackgroundColor="@color/cardBackground">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardBackgroundColor="@color/cardBackground">

        <LinearLayout
            android:id="@+id/package_background"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="5dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                app:cardCornerRadius="8dp"
                android:elevation="8dp">

                <ImageView
                    android:id="@+id/iherb_item_image"
                    android:layout_width="180dp"
                    android:layout_height="180dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@color/bannerColor" />

                <ImageView
                    android:id="@+id/item_refresh"
                    android:layout_margin="10dp"
                    android:layout_gravity="top|right"
                    android:layout_width="10dp"
                    android:layout_height="10dp"/>

                <ImageView
                    android:id="@+id/item_availability"
                    android:layout_margin="10dp"
                    android:layout_gravity="bottom|right"
                    android:layout_width="24dp"
                    android:layout_height="24dp"/>

                <TextView
                    android:id="@+id/item_discount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:paddingTop="8dp"
                    android:paddingLeft="8dp"
                    android:text=""
                    android:paddingBottom="5dp"
                    android:paddingVertical="5dp"
                    android:textColor="@color/titleColor"
                    android:textStyle="bold"
                    android:layout_gravity="bottom|left"/>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/item_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:paddingTop="8dp"
                    android:paddingLeft="8dp"
                    android:text="Title"
                    android:textColor="@color/titleColor"
                    android:textStyle="bold"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/item_brand"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:paddingTop="8dp"
                    android:paddingLeft="8dp"
                    android:text="Brand"
                    android:textColor="@color/titleColor"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:paddingTop="8dp"
                    android:textStyle="bold"
                    android:paddingLeft="8dp"
                    android:text="Current price:"
                    android:textColor="@color/titleColor"/>

                <TextView
                    android:id="@+id/item_current_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:paddingTop="8dp"
                    android:paddingLeft="8dp"
                    android:text="Price"
                    android:textColor="@color/titleColor"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:paddingTop="8dp"
                    android:paddingLeft="8dp"
                    android:textStyle="bold"
                    android:text="Regular price:"
                    android:textColor="@color/titleColor"/>

                <TextView
                    android:id="@+id/item_standard_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:paddingTop="8dp"
                    android:paddingLeft="8dp"
                    android:text="Standard price"
                    android:textColor="@color/titleColor"
                    android:layout_weight="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
                    app:tint="@color/titleColor" />

                <TextView
                    android:id="@+id/item_min_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:paddingTop="8dp"
                    android:paddingLeft="8dp"
                    android:text="Min price"
                    android:textColor="@color/titleColor"
                    android:layout_weight="1"/>

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_baseline_keyboard_arrow_up_24"
                        app:tint="@color/titleColor" />

                    <TextView
                        android:id="@+id/item_max_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:paddingTop="8dp"
                        android:paddingLeft="8dp"
                        android:text="Max price"
                        android:textColor="@color/titleColor"
                        android:layout_weight="1"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</androidx.cardview.widget.CardView>
